{% extends 'base.html.twig' %}

{% block title %}Tous les articles{% endblock %}

{% block body %}

    <section class="articles mt-4">

        <div class="row">
            {% for article in articles %}
                <div class="col-4 border border-white border-2 text-center shadow p-3 mb-3 bg-body rounded animated tada single-article">
                    <h2>{{ article.title }}</h2>
                    <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }} dans la Catégorie {{ article.category.title }}</div>
                    <div class="content">
                        <img src="{{ article.image}}" class="article-image img-thumbnail" alt="article">
                        <p>{{ article.content|slice(0, 100) |raw }}...</p>
                        {# Le filtre raw pour nous donner le contenu tel qu'il est(m avec les balises telle qu'elle est) #}
                        <a href="{{ path('blog_show', {'id': article.id}) }}" class="btn btn-primary">Lire la suite</a>
                    </div>
                </div>
            {% endfor %}
        </div>

    </section>

{% endblock %}
